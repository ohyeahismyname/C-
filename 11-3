//回傳str中含有字元C個數

#include <stdio.h>

int strchnum(const char *str, int c) {
    unsigned char uc = (unsigned char)c; 
    int count = 0 ;
    while (*str != '\0') {
        if ((unsigned char)*str == uc) {
            count++;

        }
        str++;
    }
    return count;
}

int main(void) {
    const char *text = "This is a book";
    int p = strchnum(text, 'o');    
    //printf("%d\n", p); 
    if (p) {
        printf("%d\n", p); 
    } else {
        printf("Not found\n");
    }
    return 0;
}
